
@{
    ViewData["Title"] = "NHTCreate";
}

@model NHTLesson04.Models.NHTBook
@{
    ViewData["Title"] = "Thêm sách mới";
}

<h2>Thêm sách mới</h2>

<form asp-action="NHTCreatesubmit" method="post">
    <div class="form-group">
        <label>Mã sách</label>
        <input asp-for="NHTId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tiêu đề</label>
        <input asp-for="NHTTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="NHTDes" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Hình ảnh (đường dẫn)</label>
        <input asp-for="NHTImage" class="form-control" />
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input asp-for="NHTPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số trang</label>
        <input asp-for="NHTPage" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Lưu</button>
    <a asp-action="NHTIndex" class="btn btn-secondary mt-2">Hủy</a>
</form>

